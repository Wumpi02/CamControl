<script>

    function handleNotifyPropertyChangedEvent(event) {
        const eventData = event.detail;
        if (eventData.property == "OBS.IsConnected") {
            $.ajax({
                url: '/Index?handler=StatusPartial',
                type: 'GET',
                success: function (result) {
                    $('#statusPartialContainer').html(result);
                },
                error: function (error) {
                    console.error('Error reloading the statusPartialContainer view:', error);
                }
            });
        }
    }
    document.addEventListener("notifyPropertyChanged", handleNotifyPropertyChangedEvent);
</script>