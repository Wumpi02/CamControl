@page "{cameraguid:cameraguid}/{presetguid}"
@model CamControl.Pages.CameraOp.AddEditPresetModel
@using Microsoft.AspNetCore.Mvc.Localization;
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<EditModel> Localizer
@inject IHtmlLocalizer<EditModel> htmlLocalizer
@{
    ViewData["Title"] = @Localizer["Preset bearbeiten"];
}
<section id="main-content">
    <section class="wrapper site-min-height">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb title">
                        @Localizer["Preset bearbeiten"]
                    </h4>
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <form class="form-horizontal style-form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input asp-for="Preset.Camera_Guid" type="hidden" />
                                    <input asp-for="Preset.Preset_Guid" type="hidden" />
                                    <input asp-for="@Model.ImageUrl" type="hidden" />
                                    <div class="form-group">
                                        <label asp-for="Preset.Preset_Number" class="control-label"></label>
                                        <input asp-for="Preset.Preset_Number" class="form-control" />
                                        <span asp-validation-for="Preset.Preset_Number" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Preset.Name" class="control-label"></label>
                                        <input asp-for="Preset.Name" class="form-control" />
                                        <span asp-validation-for="Preset.Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Preset.Description" class="control-label"></label>
                                        <input asp-for="Preset.Description" class="form-control" />
                                        <span asp-validation-for="Preset.Description" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Preset.Token" class="control-label"></label>
                                        <select asp-for="Preset.Token" asp-items=@Model.PresetsList class="form-control"></select>
                                        <span asp-validation-for="Preset.Token" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit"  asp-page-handler="UploadPicture" value=@Localizer["Bild hochladen"] class="btn btn-outline-secondary" />
                                       @* <a  asp-page="/CameraOp/UploadPicture" asp-route-presetguid="@Model.Preset.Preset_Guid" class="btn btn-outline-secondary">
                                            <i class="fa fa-edit">
                                            </i>@Localizer["Bild hochladen"]</a>*@
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value=@Localizer["speichern"] class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                            <div class="col">
                                <img src="@Href(Model.ImageUrl)"
                                     alt="" style="width: 200px;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <a asp-page="/CameraOp/Index">@Localizer["Zurück zur Liste"]</a>
        </div>


    </section>
</section>